AddOptionMenu "NewPlayerMenu"
{
	StaticText ""
	Submenu "$OPTMNU_ZPERK", "ZPerkMenu"
}

OptionValue "RightLeft"
{
	0, "$ZPERKMNU_LEFT"
	1, "$ZPERKMNU_RIGHT"
}

OptionMenu "ZPerkMenu"
{
	Class "ZPerkMenu"
	Title "$OPTMNU_ZPERK"
	Position -32
	StaticText ""
	StaticText "$ZPERKMNU_CATEGORY1", gold
	ZPerkOption "$ZPERKMNU_BLACKGLOVES",		"$ZPERKMNU_HELPTEXT_BLACKGLOVES",		"zperk_blackgloves",		"YesNo"
	ZPerkOption "$ZPERKMNU_GLOVEDFIST",			"$ZPERKMNU_HELPTEXT_GLOVEDFIST",		"zperk_glovedfist",			"YesNo"
	StaticText ""
	StaticText "$ZPERKMNU_CATEGORY2", gold
	ZPerkOption "$ZPERKMNU_FLIPFIST",			"$ZPERKMNU_HELPTEXT_FLIPFIST",			"zperk_flipfist",			"RightLeft"
	ZPerkOption "$ZPERKMNU_FLIPPISTOL",			"$ZPERKMNU_HELPTEXT_FLIPPISTOL",		"zperk_flippistol",			"RightLeft"
	StaticText ""
	StaticText "$ZPERKMNU_CATEGORY3", gold
	ZPerkOption "$ZPERKMNU_RESPONSIVE",			"$ZPERKMNU_HELPTEXT_RESPONSIVE",		"zperk_responsive",			"YesNo"
	ZPerkSlider "$ZPERKMNU_WPNSWITCHMULT",		"$ZPERKMNU_HELPTEXT_WPNSWITCHMULT",		"zperk_weaponswitchmult",	2, 20, 1, 1, "zperk_responsive"
	ZPerkOption "$ZPERKMNU_ACCURATEPISTOL",		"$ZPERKMNU_HELPTEXT_ACCURATEPISTOL",	"zperk_accuratepistol",		"YesNo"
	StaticText ""
	StaticText "$ZPERKMNU_CATEGORY4", gold
	ZPerkOption "$ZPERKMNU_SMOOTHPROJ",			"$ZPERKMNU_HELPTEXT_SMOOTHPROJ",		"zperk_smoothprojectiles",	"YesNo"
	ZPerkOption "$ZPERKMNU_FISTLESSBERSK",		"$ZPERKMNU_HELPTEXT_FISTLESSBERSK",		"zperk_fistlessberserk",	"YesNo"
	StaticText ""
	StaticText "$ZPERKMNU_VERSION", green
}


